# Local Development Environment Variables
# Copy this file to .env and fill in your values

# Azure Cosmos DB (MongoDB API) Configuration
AZURE_COSMOS_CONNECTIONSTRING=mongodb://localhost:27017
# For Azure Cosmos DB, use:
# AZURE_COSMOS_CONNECTIONSTRING=mongodb://<account-name>:<password>@<account-name>.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000

# MongoDB Database Name
MONGODB_DATABASE=tododb

# Azure Redis Cache Configuration
AZURE_REDIS_HOST=localhost
AZURE_REDIS_PORT=6379
AZURE_REDIS_DATABASE=0
AZURE_REDIS_SSL=false
AZURE_REDIS_PASSWORD=
# For Azure Redis Cache, use:
# AZURE_REDIS_HOST=<cache-name>.redis.cache.windows.net
# AZURE_REDIS_PORT=6380
# AZURE_REDIS_DATABASE=0
# AZURE_REDIS_SSL=true
# AZURE_REDIS_PASSWORD=<your-redis-primary-key>

# Application Configuration
PORT=8080
ENVIRONMENT=development
