# Local Development Environment Variables
# Copy this file to .env and fill in your values

# MongoDB/Cosmos DB Configuration
MONGO_URI=mongodb://localhost:27017
# For Azure Cosmos DB, use:
# MONGO_URI=mongodb://<account-name>:<password>@<account-name>.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
# For Azure Redis Cache, use:
# REDIS_ADDR=<cache-name>.redis.cache.windows.net:6380
# REDIS_PASSWORD=<your-redis-primary-key>

# Application Configuration
PORT=8080
ENVIRONMENT=development
